<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fx:id="uidIcon" fitHeight="16" fitWidth="16" preserveRatio="true" />
        <Label fx:id="uid" styleClass="cell_small_label" text="\$uid" />
      </HBox>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fx:id="courseIcon" fitHeight="16" fitWidth="16" preserveRatio="true" />
        <Label fx:id="course" styleClass="cell_small_label" text="\$course" />
      </HBox>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fx:id="groupIcon" fitHeight="16" fitWidth="16" preserveRatio="true" />
        <Label fx:id="group" styleClass="cell_small_label" text="\$group" />
      </HBox>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fx:id="emailIcon" fitHeight="16" fitWidth="16" preserveRatio="true" />
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      </HBox>
    </VBox>
  </GridPane>
</HBox>